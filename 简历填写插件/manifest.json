{
  "manifest_version": 3,
  "name": "自动填简历插件",
  "version": "1.0.0",
  "description": "自动填写常见简历问题，支持从Markdown文件读取个人信息",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["resumeParser.js", "content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "自动填简历"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "fill-resume": {
      "suggested_key": {
        "default": "Ctrl+Shift+R"
      },
      "description": "自动填写简历信息"
    }
  }
} 